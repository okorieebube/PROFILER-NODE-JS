

<!-- Content Wrapper START -->
<div class="main-content">
        <div class="container-fluid">
                <div class="row">
                <div class="col-lg-3">
                            <div class="widget-profile-1 card" style="border: solid 1px #454545;">
                                <div class="profile border bottom xt-img-box">
                                    <div class="xt-cover-img">
                                            <img style="border-radius: 0%;" class="mrg-top-30" src="/default/uploads/category-cover/<%= catDetails[0].cover_photo %>" alt="">
    
                                    </div>
                                    <h4 class="mrg-top-20 no-mrg-btm text-semibold">
                                            <%= catDetails[0].title %> 
                                    </h4>
                                </div>
                                <div class="pdd-horizon-30 pdd-vertical-20">
                                    <h5 class="text-semibold mrg-btm-5">Description:</h5>
                                    <span>
                                        <!-- <i class="ti-email" style="color: #00E813;"></i>  -->
                                        <p > 
                                            <span style="color: #515365;font-size:13px;">
                                                    <%= catDetails[0].description %>
                                            </span>
                                        <p/>
                                        
                                    </span>
                                    
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-9">
                    <div class="card" style="border: 1px solid #454545;">
                        <div class="card-block">
                            <div class="row">
                                <div class="col-md-12">
                                    <h4 class="card-title">Category Details</h4>
                                    <form id="cat-update-details" class="form-horizontal mrg-top-40 pdd-right-30">
                                        <div class="form-group row">
                                            <label for="form-1-1" class="col-md-2 control-label">Title:</label>
                                            <div class="col-md-10">
                                                <input type="text" class="form-control" name="cat_new_title" placeholder="Title" value="<%= catDetails[0].title %>">
                                                <input type="hidden" class="form-control" name="cat_id"  value="<%= catDetails[0].unique_id %>">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="form-1-3" class="col-md-2 control-label">Description:</label>
                                            <div class="col-md-10">
                                                <textarea type="email" class="form-control" name="cat_new_desc" placeholder="Email" value="" >
                                                        <%= catDetails[0].description %>
                                                </textarea>
                                            </div>
                                        </div>
                                        <button class="btn btn-primary btn-sm xt-cat-update-btn" style="float:right;">Update Details</button>
                                    </form><br>
                                    <h4 class="card-title">Category Cover Photo</h4>
                                    <form class="form-horizontal mrg-top-40 pdd-right-30" enctype="multipart/form-data" method="POST" action="/to-switch/upload-category-photo">
                                        <div class="form-group row">
                                            <label for="form-1-1" class="col-md-2 control-label">&nbsp;</label>
                                            <div class="col-md-10">
                                                <% if(error){  %>
                                                <input type="hidden" id="category-cover-error" 
                                                value="<%=error%>" >
                                                <% }else{} %>
                                                <input type="hidden" id="xt_cat_uniq_id" class="form-control" name="category_id"  value="<%= catDetails[0].unique_id %>">
                                                    <label for="img-upload" class="pointer">
                                                        <span class="btn btn-default display-block no-mrg-btm">Choose file</span>
                                                        <input class="d-none" type="file" name="uploadedCategory" id="img-upload">
                                                        <!-- <input type="file" name="uploadedCategory" id="filep"> -->
                                                    </label>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-sm" style="float:right;">Upload Image</button>
                                    </form>
                                    <!-- <form action="/to-switch/upload-category-photo" method="POST" enctype="multipart/form-data">
                                        <input name="x" type="text">
                                        <input type="file" name="uploadedCategory" id="filep">
                                        <button type="submit" name="sub">submit</button>
                                    </form> -->
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
                
                
            </div>
        </div>
    </div>
    <!-- Content Wrapper END -->
    
